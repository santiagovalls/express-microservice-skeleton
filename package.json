{
  "name": "express-microservice",
  "version": "1.0.0",
  "description": "Express Microservice with JWT authentication",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "predev": "npm run clean-logs",
    "dev": "cross-env NODE_ENV=development nodemon --watch src --ext js,json src/server.js",
    "dev:debug": "cross-env NODE_ENV=development nodemon --inspect --watch src --ext js,json src/server.js",
    "qa": "cross-env NODE_ENV=qa node src/server.js",
    "prod": "cross-env NODE_ENV=production node src/server.js",
    "start": "npm run prod",
    "pretest": "npm run clean-logs",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --watchAll",
    "clean-logs": "node scripts/clean-logs.js",
    "db:setup": "node scripts/setup-database.js",
    "db:setup:dev": "cross-env NODE_ENV=development node scripts/setup-database.js",
    "db:setup:test": "cross-env NODE_ENV=test node scripts/setup-database.js",
    "db:setup:qa": "cross-env NODE_ENV=qa node scripts/setup-database.js",
    "db:setup:prod": "cross-env NODE_ENV=production node scripts/setup-database.js",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "bcrypt": "^5.1.1",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.21.2",
    "helmet": "7.1.0",
    "jsonwebtoken": "9.0.2",
    "morgan": "1.10.0",
    "winston": "3.11.0",
    "winston-daily-rotate-file": "4.7.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "29.7.0",
    "nodemon": "3.1.9",
    "prisma": "^6.5.0",
    "supertest": "6.3.3"
  }
}
